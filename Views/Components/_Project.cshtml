@model IEnumerable<mvc_first.Models.Project>



<section class="featured-section p-3 p-lg-5">

    <div class="container">
        <h2 class="section-title font-weight-bold mb-5">خاص ترین پروژه ها</h2>
        <div class="row">
            @foreach (var i in Model)
            {
            <div class=cold-6 mb-5">
                <div class="card project-card">
                    <div class="row no-gutters">
                        <div class="col-lg-4 card-img-holder">
                            <img src=@i.img class="card-img" alt="image">
                        </div>
                        <div class="col-lg-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="project.html" class="theme-link">
                                        Project
                                        Heading
                                    </a>
                                </h5>
                                <p class="card-text"> 
                                        @i.Description
                                </p>
                                <p class="card-text"><small class="text-muted">Client: Google</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           }

        </div>
    </div>
</section>
<div class="main-wrapper">
